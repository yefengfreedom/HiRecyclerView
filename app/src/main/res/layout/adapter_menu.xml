<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_ui_margin_large"
    android:layout_marginRight="@dimen/default_ui_margin_large"
    android:layout_marginTop="@dimen/default_ui_margin_large"
    app:cardBackgroundColor="@color/accent"
    app:cardCornerRadius="@dimen/default_ui_margin"
    app:cardMaxElevation="@dimen/default_ui_margin">

    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/default_ui_margin"
        android:paddingTop="@dimen/default_ui_margin"
        android:text="yf list recycler view"
        android:textColor="@color/yf_white"
        android:textSize="@dimen/text_size_button"
        android:textStyle="bold" />
</android.support.v7.widget.CardView>